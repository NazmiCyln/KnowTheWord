<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".PlayActivity">


    <ImageView
        android:id="@+id/play_activity_imgViewHeartDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kalp_arka_plan"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/play_activity_imgViewHeartDesign"
        app:layout_constraintBottom_toBottomOf="@+id/play_activity_imgViewHeartDesign"
        app:layout_constraintRight_toRightOf="@+id/play_activity_imgViewHeartDesign"
        app:layout_constraintLeft_toLeftOf="@+id/play_activity_imgViewHeartDesign"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/play_activity_imageViewHeart"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/heart"/>

        <TextView
            android:id="@+id/play_activity_txtViewUserHeartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+1"
            android:textColor="#55380B"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/playActivity_cardViewQuestion"
        android:layout_width="300dp"
        android:layout_height="220dp"
        tools:ignore="MissingConstraints"
        app:cardBackgroundColor="#B57D26"
        app:layout_constraintTop_toBottomOf="@+id/play_activity_imgViewHeartDesign"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="25dp"
        app:cardElevation="50dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/playActivity_txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:textColor="#432B06"
            android:gravity="center"
            android:textSize="17sp"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/playActivity_imgViewStatisticTable"
        android:layout_width="45dp"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints,OnClick"
        android:onClick="btnIstatistikTablosu"
        app:layout_constraintTop_toBottomOf="@+id/playActivity_cardViewQuestion"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/analiz"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"/>


    <TextView
        android:id="@+id/playActivity_txtQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_ _ _ _ _ _"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textColor="#432B06"
        app:layout_constraintTop_toBottomOf="@+id/playActivity_imgViewStatisticTable"
        app:layout_constraintLeft_toLeftOf="@+id/playActivity_cardViewQuestion"
        app:layout_constraintRight_toRightOf="@+id/playActivity_cardViewQuestion"
        android:layout_marginTop="12dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/playActivity_editTxtGuess"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#432B06"
        android:inputType="text"
        android:textColorHint="#976111"
        android:hint="Tahmininizi Giriniz"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/playActivity_txtQuest"
        app:layout_constraintRight_toRightOf="@+id/playActivity_txtQuest"
        app:layout_constraintLeft_toLeftOf="@+id/playActivity_txtQuest"
        android:layout_marginTop="30dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/playActivity_editTxtGuess"
        app:layout_constraintLeft_toLeftOf="@+id/playActivity_editTxtGuess"
        app:layout_constraintRight_toRightOf="@+id/playActivity_editTxtGuess"
        tools:ignore="MissingConstraints">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harf Al"
            android:onClick="btnHarfAl"
            android:textSize="16.5sp"
            android:textStyle="bold"
            android:textColor="#55380B"
            android:background="@drawable/btn_play_selector"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahmin Et"
            android:onClick="btnTahminEt"
            android:textSize="16.5sp"
            android:textStyle="bold"
            android:textColor="#55380B"
            android:background="@drawable/btn_play_selector"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="FULL_BANNER"
        app:layout_constraintBottom_toBottomOf="parent"
        ads:adUnitId="ca-app-pub-2396996479721834/2628743827">
    </com.google.android.gms.ads.AdView>


</androidx.constraintlayout.widget.ConstraintLayout>