<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main_activity_constra"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_activity_imgViewUserNameBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_prf_name"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/main_activity_circleImageViewProfile"
        app:layout_constraintTop_toTopOf="@+id/main_activity_circleImageViewProfile"
        app:layout_constraintBottom_toBottomOf="@+id/main_activity_circleImageViewProfile"/>

    <TextView
        android:id="@+id/main_activity_textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12.5sp"
        android:textStyle="bold"
        android:text="Nazmi"
        android:textColor="#55380B"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@+id/main_activity_imgViewUserNameBg"
        app:layout_constraintBottom_toBottomOf="@+id/main_activity_imgViewUserNameBg"
        app:layout_constraintRight_toRightOf="@+id/main_activity_imgViewUserNameBg"
        app:layout_constraintLeft_toLeftOf="@+id/main_activity_imgViewUserNameBg"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_activity_circleImageViewProfile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/ic_person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:civ_border_width="3dp"
        app:civ_border_color="#55380B"/>

    <ImageView
        android:id="@+id/main_activity_imgViewHeartDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kalp_arka_plan"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="@+id/main_activity_circleImageViewProfile"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="+"
        android:onClick="btnHakKazan"
        android:textSize="18sp"
        android:textColor="#55380B"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:background="@drawable/btn_plus"
        app:layout_constraintTop_toTopOf="@+id/main_activity_imgViewHeartDesign"
        app:layout_constraintBottom_toBottomOf="@+id/main_activity_imgViewHeartDesign"
        app:layout_constraintRight_toLeftOf="@+id/main_activity_imgViewHeartDesign"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/main_activity_imgViewHeartDesign"
        app:layout_constraintBottom_toBottomOf="@+id/main_activity_imgViewHeartDesign"
        app:layout_constraintRight_toRightOf="@+id/main_activity_imgViewHeartDesign"
        app:layout_constraintLeft_toLeftOf="@+id/main_activity_imgViewHeartDesign"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/play_activity_imageViewHeart"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/heart"/>

        <TextView
            android:id="@+id/main_activity_txtViewUserHeartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#55380B"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="+1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/settings"
        tools:ignore="MissingConstraints,OnClick"
        android:layout_gravity="end"
        android:onClick="btnAyarlar"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="10dp"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="ca-app-pub-2396996479721834/2628743827">
    </com.google.android.gms.ads.AdView>

    </LinearLayout>

    <ImageView
        android:id="@+id/main_activity_imgAppNameLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_imgAppNameLogo"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/main_activity_btnPlay"
            android:layout_width="240dp"
            android:layout_height="65dp"
            android:layout_marginTop="14dp"
            android:onClick="mainBtnClick"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Hemen Oyna"
            android:textColor="#55380B"
            android:background="@drawable/btn_bg_selector"
            tools:ignore="OnClick"/>


        <Button
            android:id="@+id/main_activity_btnShop"
            android:layout_width="240dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:onClick="mainBtnClick"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Mağaza"
            android:textColor="#55380B"
            android:background="@drawable/btn_bg_selector"
            tools:ignore="OnClick"/>


        <Button
            android:id="@+id/main_activity_btnExit"
            android:layout_width="240dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:onClick="mainBtnClick"
            android:text="Çıkış"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#55380B"
            android:background="@drawable/btn_bg_selector"
            tools:ignore="OnClick"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>